{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "typeRoots": ["node_modules/@types", "src/types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "__tests__", "examples"]
}
